<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ac1"
    tools:context=".Medicament">

    <TextView
        android:id="@+id/TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=" Gérer mes médicaments"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgmed"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_below="@+id/TV"
        android:layout_margin="10dp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/medi" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/imgmed"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/recherche"
            android:layout_width="254dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:hint="Recherche"
            android:padding="20dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ajout"/>
    </LinearLayout>

    <TextView
        android:id="@+id/result"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/linearlayout"
        android:textSize="25sp"/>
    <Button
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scanner"
        android:layout_below="@+id/result"/>
    <TextView
        android:layout_margin="20dp"
        android:id="@+id/result2"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanner"
        android:text=""/>









</RelativeLayout>