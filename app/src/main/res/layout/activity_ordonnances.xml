<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ord1"
    tools:context="OrdonnancesActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="309dp"
        android:layout_height="32dp"
        android:text="GÃ©rer mes ordannaces "
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="3dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ord"
        android:textAlignment="center"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="62dp" />
    <ImageView
        android:id="@+id/text_back"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:src="@drawable/back_color"
        android:textAlignment="center"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="268dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/add"
        android:drawableTint="@color/black"
        android:text="Ajouter votre ordonnance"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/image"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="45dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/white"
        android:drawableTint="@color/black"
        android:drawableLeft="@drawable/list"
        android:text="Consulter votre liste de ordonnance"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>