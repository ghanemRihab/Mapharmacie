<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ajoutmedi"
    android:background="@drawable/back_blue">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="187dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="21dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView4"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/cardView4"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/images_medi"
            tools:ignore="MissingConstraints" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="366dp"
        android:layout_height="655dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/teal_200"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="30dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_marginTop="70dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="Nom de medicaments"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nom_medicament"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:inputType="text"
                android:hint=".........." />

            <TextView
                android:layout_width="354dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="Dosage du médicament"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dosage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:hint=".........." />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="Nombre des prices par jour "
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nbr_prise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:hint=".........."
                android:inputType="number" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="Traitement"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/traitement"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginLeft="12dp"
                android:inputType="text"
                android:hint=".........." />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="Quantités (Mes boites)"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/quantite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:hint=".........."
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="Temps Prise"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_moment_prise2"
                android:layout_width="366dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:entries="@array/moments_prise"
                android:prompt="@string/label_moment_prise" />

            <Button
                android:id="@+id/ajoutMed"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Ajouter medicament"
                android:textColor="#FFFDFD"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF" />

            <Button
                android:id="@+id/consultMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Consulter mes  medicaments"
                android:textColor="#FFFDFD"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#FFFFFF" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>